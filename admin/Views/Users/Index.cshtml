@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core.Fluent
@model IEnumerable<admin.Models.User>

@{
    ViewData["Title"] = "會員列表";
}


@section Styles{
    <link href='~/css/UsersTable.css' rel="stylesheet">
}



<h1>使用者資訊</h1>

<p>
    <a class="btn btn-warning" asp-action="Create">創立新會員</a>
</p>
@using (Html.BeginForm())
{
    <p>
        姓名&地址&帳號權限: @Html.TextBox("SearchString")  
        <input type="submit" value="搜尋" /></p>
}
<div class="table-responsive"> 
<table class="table table-hover"  style="table-layout:fixed" >
    <thead style="background-color:hsl(50,100%,50%)">
        <tr>
         

            <th>
                @Html.DisplayNameFor(model => model.會員帳號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.會員密碼)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.頭像檔名)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.暱稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.郵遞區號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.地址)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.電話)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.註冊時間)*@
                @Html.ActionLink("註冊時間", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.帳號權限)
            </th>
            <th>
@*                @Html.DisplayNameFor(model => model.資料更新時間)*@
                @Html.ActionLink("註冊時間", "Index", new { sortOrder =  ViewBag.UpdateSortParm })
            </th>
          @*  <th> 
                @Html.DisplayNameFor(model => model.Is啟用)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is刪除)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.違規次數)
            </th>
          @*  <th>
                @Html.DisplayNameFor(model => model.備註)
            </th>*@
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.會員帳號)
            </td>
            <td class="content" >
                @Html.DisplayFor(modelItem => item.會員密碼)
            </td>
       @*     <td>
                @Html.DisplayFor(modelItem => item.頭像檔名)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.暱稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.郵遞區號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.註冊時間)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳號權限)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.資料更新時間)
                
            </td>
        @*    <td>
                @Html.DisplayFor(modelItem => item.Is啟用)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is刪除)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.違規次數)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.備註)
            </td>*@
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.會員id">編輯會員資訊</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.會員id">會員詳細資訊</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.會員id">刪除會員</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
</div>